---
- name: checking for java directory
  stat:
    path: /apps/java
  register: javadir

- name: creating java directory before copying jdk version
  shell: "sudo -i mkdir /apps/java && sudo -i chown -R {{ user }}:{{ user }} /apps/java"
  when: javadir.stat.exists == False

- name: copying specified jdk 
  copy: 
    src: /apps/java/{{ jdkversion }}
    dest: /apps/java/
    mode: 0755
    owner: "{{ user }}"
    group: "{{ user }}"
  register: copy_java
